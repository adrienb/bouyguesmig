<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="pablo_import_tree_view" model="ir.ui.view">
            <field name="name">pablo.import.tree</field>
            <field name="model">pablo.import</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="import_date"/>
                    <field name="import_state"/>
                </tree>
            </field>
        </record>

        <record id="pablo_import_form_view" model="ir.ui.view">
            <field name="name">pablo.import.form</field>
            <field name="model">pablo.import</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="import_state" widget="statusbar" statusbar_visible="draft,imported"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_pablo_sale_orders" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('pablo_sale_order_count', '=', 0)]}">
                                <field name="pablo_sale_order_count" widget="statinfo" string="Pablo Sale Orders"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="import_file" filename="filename" attrs="{'readonly': [('imported', '=', True)]}"/>
                            <field name="import_date" readonly="1"/>
                            <field name="company_id" attrs="{'readonly': [('imported', '=', True)]}"/>
                            <field name="imported" invisible="1"/>
                        </group>
                        <group>
                            <button name="import_sale_order" type="object" class="oe_highlight" string="Import Sale Orders" attrs="{'invisible': [('imported', '=', True)]}"/>
                        </group>
                        <notebook>
                            <page name="pablo_sale_order" string="Pablo Sale Orders" attrs="{'invisible': [('import_state', '=', 'draft')]}">
                                <group>
                                    <field name="pablo_sale_order_ids" nolabel="1" readonly="1">
                                        <tree>
                                            <field name="name"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_pablo_import" model="ir.actions.act_window">
            <field name="name">Pablo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pablo.import</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.pablo_import_tree_view"/>
        </record>

        <menuitem action="action_pablo_import" id="menu_action_pablo_import" groups="bouygues.bouygues_manager_sales_group,bouygues.bouygues_trade_sales_group,bouygues.bouygues_trade_extended_sales_group,base.group_system"/>
</odoo>
