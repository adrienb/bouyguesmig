<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_product_category_form_view" model="ir.ui.view">
            <field name="name">bouygues.product.category.form</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="code" required="1"/>
                    <field name="type"/>
                    <field name="purchase_family_id"/>
                    <field name="public_categ_ids" widget="many2many_tags" string="Categories"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
