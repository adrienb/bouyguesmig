<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="partner_category_tree_view" model="ir.ui.view">
            <field name="name">partner.category.tree</field>
            <field name="model">partner.category</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="partner_category_form_view" model="ir.ui.view">
            <field name="name">partner.category.form</field>
            <field name="model">partner.category</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_partner_category" model="ir.actions.act_window">
            <field name="name">Partner Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.category</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.partner_category_tree_view"/>
        </record>
        <menuitem action="action_partner_category" id="menu_action_partner_category" parent="contacts.res_partner_menu_config" sequence="20"/>
</odoo>
