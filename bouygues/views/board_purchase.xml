<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--My Dashboard Purchase-->
        <record model="ir.ui.view" id="board_purchase_my_dash_view">
            <field name="name">My Dashboard Purchase</field>
            <field name="model">board.purchase</field>
            <field name="arch" type="xml">
                <form string="My Dashboard">
                    <board style="2-1">
                        <column>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <!--My Dashboard Action Purchase-->
        <record model="ir.actions.act_window" id="open_board_purchase_my_dash_action">
            <field name="name">My Dashboard Purchase</field>
            <field name="res_model">board.purchase</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="board_purchase_my_dash_view"/>
        </record>

        <!--My Dashboard Menu Purchase-->
        <menuitem
            id="menu_board_purchase_my_dash"
            parent="base.menu_board_root"
            action="open_board_purchase_my_dash_action"
            sequence="6"/>
    </data>
</odoo>
