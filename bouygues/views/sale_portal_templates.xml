<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="portal_my_orders_bouygues" inherit_id="sale.portal_my_orders">
		<t t-call="portal.portal_searchbar">
            <t t-set="title">Reference</t>
        </t>
		<xpath expr="//t[@t-if='orders']/thead/tr/th[1]" position="after">
			<th class="text-right">Client Ref.</th>
		</xpath>
		<xpath expr="//t[@t-if='orders']/thead/tr/th[4]" position="after">
			<th class="text-right">Status</th>
		</xpath>
		<xpath expr="//t[@t-foreach='orders']/tr/td[1]" position="after">
			<td class="text-right"><span t-field="order.client_order_ref"/></td>
		</xpath>
		<xpath expr="//t[@t-foreach='orders']/tr/td[4]" position="after">
			<td class="text-right"><span t-field="order.so_state"/></td>
		</xpath>
	</template>
</odoo>
