<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp.menu_mrp_configuration" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [ref('mrp.group_mrp_manager')])]"/>
        </record>

        <record id="mrp.menu_mrp_config" model="ir.ui.menu">
            <field name="groups_id" eval="[(4, ref('bouygues.bouygues_logistic_sales_group'))]"/>
        </record>

        <record id="bouygues_mrp_production_form_view" model="ir.ui.view">
            <field name="name">bouygues.mrp.production.form.view</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header//button[@name='button_mark_done']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='action_confirm']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_supplier_sales_group,bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='action_assign']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_supplier_sales_group,bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='button_plan']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='button_unplan']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='open_produce_product'][1]" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='open_produce_product'][2]" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='post_inventory']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='button_scrap']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='button_unreserve']" position="attributes">
                    <attribute name="groups">bouygues.bouygues_logistic_sales_group,bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='action_cancel'][1]" position="attributes">
                    <attribute name="groups">bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
                <xpath expr="//header//button[@name='action_cancel'][2]" position="attributes">
                    <attribute name="groups">bouygues.bouygues_manager_sales_group,mrp.group_mrp_manager</attribute>
                </xpath>
            </field>
        </record>
        <record id="mrp.menu_mrp_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, 0, [
                ref('mrp.group_mrp_user'),
                ref('mrp.group_mrp_manager'),
                ref('bouygues.bouygues_supplier_sales_group'),
                ref('bouygues.bouygues_logistic_sales_group'),
                ref('bouygues.bouygues_trade_sales_group'),
                ref('bouygues.bouygues_manager_sales_group'),
            ])]"/>
        </record>
        <record model="ir.actions.server" id="action_export_mrp_production_wms">
            <field name="name">Export Manufacturing Orders (WMS)</field>
            <field name="model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_model_id" ref="mrp.model_mrp_production" />
            <field name="state">code</field>
            <field name="code">records.export_production_wms()</field>
        </record>
    </data>
</odoo>
