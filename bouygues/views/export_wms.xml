<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="export_wms_tree_view" model="ir.ui.view">
            <field name="name">export.wms.tree</field>
            <field name="model">export.wms</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="export_wms_form_view" model="ir.ui.view">
            <field name="name">export.wms.form</field>
            <field name="model">export.wms</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="export_file" filename="filename"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_export_wms" model="ir.actions.act_window">
            <field name="name">WMS Exports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.wms</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.export_wms_tree_view"/>
        </record>

        <menuitem action="action_export_wms" id="menu_action_export_wms" parent="stock.menu_stock_config_settings" sequence="20"/>

</odoo>
