<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_hr_employee_form_view" model="ir.ui.view">
            <field name="name">bouygues.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page string="Validation Delegation" name="validation_delegation">
                        <group>
                            <field name="validation_delegation_ids">
                                <tree editable="bottom">
                                    <field name="user_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
