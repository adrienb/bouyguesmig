<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="validation_template_tree_view" model="ir.ui.view">
            <field name="name">validation.template.tree</field>
            <field name="model">validation.template</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="warehouse_id"/>
                </tree>
            </field>
        </record>

        <record id="validation_template_form_view" model="ir.ui.view">
            <field name="name">validation.template.form</field>
            <field name="model">validation.template</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="warehouse_id"/>
                        </group>
                        <group>
                            <field name="validation_limit_1_user_id"/>
                            <field name="validation_limit_2_user_id"/>
                            <field name="validation_limit_3_user_id"/>
                            <field name="validation_limit_4_user_id"/>
                            <field name="validation_limit_5_user_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_validation_template" model="ir.actions.act_window">
            <field name="name">Validation Template</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">validation.template</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.validation_template_tree_view"/>
        </record>

        <menuitem action="action_validation_template" id="menu_action_validation_template" parent="purchase.menu_purchase_config" sequence="23"/>
</odoo>
