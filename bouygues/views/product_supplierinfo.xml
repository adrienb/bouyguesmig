<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bouygues_product_supplierinfo_tree_view" model="ir.ui.view">
            <field name="name">bouygues.product.supplierinfo.tree</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='purchase_requisition_id']" position="before">
                    <field name="product_code"/>
                </xpath>
            </field>
        </record>
        <record id="bouygues_product_supplierinfo_search_view" model="ir.ui.view">
            <field name="name">bouygues.product.supplierinfo.search</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <field name="product_code" string="Supplier Product Code" filter_domain="[('product_code', 'ilike', self)]" />
                </xpath>
                <xpath expr="//filter[@name='archived']" position="before">
                    <filter string="Archived" name="real_archived" domain="[('active', '=', False)]"/>
                </xpath>
                <xpath expr="//filter[@name='archived']" position="attributes">
                    <attribute name="string">Out of Date</attribute>
                </xpath>
            </field>
        </record>
        <record id="action_product_supplierinfo" model="ir.actions.act_window">
            <field name="name">Product Supplier Info</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.supplierinfo</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product.product_supplierinfo_tree_view"/>
        </record>
        <menuitem action="action_product_supplierinfo" id="menu_action_product_supplierinfo" parent="purchase.menu_purchase_config" sequence="20"/>
</odoo>
