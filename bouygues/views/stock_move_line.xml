<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_stock_move_line_detailed_tree_view" model="ir.ui.view">
            <field name="name">bouygues.stock.move.line.detailed.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="picking_code" invisible="1"/>
                    <field name="description_pickingin" attrs="{'invisible' : [('picking_code', '!=', 'incoming')]}"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create_edit': True}</attribute>
                </xpath>
            </field>
        </record>
        <record id="bouygues_stock_move_line_form_view" model="ir.ui.view">
            <field name="name">bouygues.stock.move.line.form</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="source_purchase_id" attrs="{'invisible' : [('source_purchase_id', '=', False)]}"/>
                    <field name="source_sale_id" attrs="{'invisible' : [('source_sale_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
