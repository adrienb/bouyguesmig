<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="sale_res_config_settings_view_form" model="ir.ui.view">
		<field name="name">res.config.settings.view.form.inherit.sale.bouygues</field>
		<field name="model">res.config.settings</field>
		<field name="inherit_id" ref="sale.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='confirmation_email_setting']" position="after">
				<div class="col-12 col-lg-6 o_setting_box" id="block_product_id_settings">
					<div class="o_setting_right_pane">
						<label for="block_default_product_id"/>
						<div class="text-muted">
							Select a product that will blocks sale.order when chosen as a sale.order.line
						</div>
						<field name="block_default_product_id"/>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
