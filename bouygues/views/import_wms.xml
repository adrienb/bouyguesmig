<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="import_wms_tree_view" model="ir.ui.view">
            <field name="name">import.wms.tree</field>
            <field name="model">import.wms</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="import_wms_form_view" model="ir.ui.view">
            <field name="name">import.wms.form</field>
            <field name="model">import.wms</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="import_file" filename="filename"/>
<!--                            <field name="note"/>-->
                        </group>
                        <group>
                            <button name="import_wms" type="object" class="oe_highlight" string="Import"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_import_wms" model="ir.actions.act_window">
            <field name="name">WMS Imports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.wms</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.import_wms_tree_view"/>
        </record>

        <menuitem action="action_import_wms" id="menu_action_import_wms" parent="stock.menu_stock_config_settings" sequence="20"/>

</odoo>
