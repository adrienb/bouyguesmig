<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_stock_warehouse_orderpoint_form_view" model="ir.ui.view">
            <field name="name">bouygues.stock.warehouse.orderpoint.from</field>
            <field name="model">stock.warehouse.orderpoint</field>
            <field name="inherit_id" ref="stock.view_warehouse_orderpoint_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='qty_multiple']" position="after">
                    <field name="main_supplier_id"/>
                </xpath>
            </field>
        </record>
        <record id="bouygues_stock_warehouse_orderpoint_tree_view" model="ir.ui.view">
            <field name="name">bouygues.stock.warehouse.orderpoint.tree</field>
            <field name="model">stock.warehouse.orderpoint</field>
            <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="main_supplier_id"/>
                </xpath>
            </field>
        </record>
        <record id="bouygues_stock_warehouse_orderpoint_search_view" model="ir.ui.view">
            <field name="name">bouygues.stock.warehouse.orderpoint.search</field>
            <field name="model">stock.warehouse.orderpoint</field>
            <field name="inherit_id" ref="stock.warehouse_orderpoint_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="after">
                    <field name="main_supplier_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
