<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="analytic_imputation_tree_view" model="ir.ui.view">
            <field name="name">analytic.imputation.tree</field>
            <field name="model">analytic.imputation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="complete_name"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="company_id"/>
                    <field name="parent_id"/>
                </tree>
            </field>
        </record>

        <record id="analytic_imputation_form_view" model="ir.ui.view">
            <field name="name">analytic.imputation.form</field>
            <field name="model">analytic.imputation</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="code"/>
                            <field name="company_id"/>
                            <field name="parent_id"/>
                            <field name="used_in_po"/>
                        </group>
                        <group>
                            <field name="validation_template_ids" attrs="{'invisible': [('used_in_po', '=', False)]}">
                                    <tree>
                                        <field name="name"/>
                                        <field name="warehouse_id"/>
                                    </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_analytic_imputation" model="ir.actions.act_window">
            <field name="name">Analytic Imputation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">analytic.imputation</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.analytic_imputation_tree_view"/>
        </record>

        <menuitem action="action_analytic_imputation" id="menu_action_analytic_imputation" parent="purchase.menu_purchase_config" sequence="20" groups="bouygues.bouygues_purchase_superadmin_group"/>
</odoo>
