<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="bouygues.login_layout" inherit_id="website.login_layout">
        <xpath expr="//div[hasclass('oe_website_login_container')]" position="attributes">
            <attribute name="class" separator=" " add="row"/>
        </xpath>
    </template>
    <template id="bouygues.login" inherit_id="web.login">
        <xpath expr="//form[hasclass('oe_login_form')]" position="before">
            <h1 class="login_title col-12">Bienvenue</h1>
            <div class="col-6 login_image">
                <img src="/bouygues/static/src/img/login_image.png" class="login_image"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('o_login_auth')]" position="after">
            <a t-attf-href="/new-account#scrollTop=0" class="btn btn-primary btn-block">
                Register
            </a>
        </xpath>
        <xpath expr="//form[hasclass('oe_login_form')]" position="attributes">
            <attribute name="class" separator=" " add="col-6"/>
        </xpath>
    </template>
    <template id="bouygues.reset_password" inherit_id="auth_signup.reset_password">
        <xpath expr="//form[hasclass('oe_reset_password_form')]" position="before">
            <h1 class="login_title col-12">Bienvenue</h1>
            <div class="col-6 login_image">
                <img src="/bouygues/static/src/img/login_image.png" class="login_image"/>
            </div>
        </xpath>
    </template>
</odoo>