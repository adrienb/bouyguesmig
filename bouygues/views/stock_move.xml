<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bouygues_stock_move_menu_tree_view" model="ir.ui.view">
            <field name="name">bouygues.stock.move.menu.tree</field>
            <field name="model">stock.move</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="quantity_done"/>
                    <field name="date"/>
                    <field name="state"/>
                    <field name="origin"/>
                    <field name="picking_partner_id"/>
                    <field name="product_id"/>
                    <field name="po_qty"/>
                    <field name="po_price_unit"/>
                    <field name="po_total_price"/>
                    <field name="analytic_imputation_id"/>
                    <field name="user_id"/>
                    <field name="picking_id"/>
                </tree>
            </field>
        </record>

        <record id="bouygues_stock_move_form_view" model="ir.ui.view">
            <field name="name">bouygues.stock.move.form</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='origin_grp']" position="attributes">
                    <attribute name="groups"></attribute>
                </xpath>
                <xpath expr="//field[@name='procure_method']" position="attributes">
                    <attribute name="groups"></attribute>
                </xpath>
            </field>
        </record>

        <record id="bouygues_action_stock_move_in" model="ir.actions.act_window">
            <field name="name">Stock Move (IN)</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('picking_code', '=', 'incoming')]</field>
            <field name="res_model">stock.move</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="bouygues.bouygues_stock_move_menu_tree_view"/>
        </record>

        <menuitem action="bouygues_action_stock_move_in" id="menu_bouygues_action_stock_move_in" parent="purchase.menu_purchase_config" sequence="40"/>
</odoo>
