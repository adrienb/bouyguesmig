<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_res_company_form_view" model="ir.ui.view">
            <field name="name">bouygues.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="company_footer"/>
                </xpath>
                <xpath expr="//page" position="after">
                    <page string="5 steps validation" name="five_steps_validation">
                        <group>
                            <field name="use_validation"/>
                            <field name="use_notification"/>
                        </group>
                        <group attrs="{'invisible': [('use_validation', '=', False)]}">
                            <group>
                                <field name="approved_mail_template_id"/>
                                <field name="total_approval_mail_template_id"/>
                            </group>
                            <group>
                                <field name="refused_mail_template_id"/>
                                <field name="unrefused_mail_template_id"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': [('use_validation', '=', False)]}">
                            <group>
                                <field name="validation_limit_1"/>
                                <field name="validation_limit_2"/>
                                <field name="validation_limit_3"/>
                            </group>
                            <group>
                                <field name="validation_limit_4"/>
                                <field name="validation_limit_5"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
