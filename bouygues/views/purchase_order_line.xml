<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="bouygues_purchase_order_line_menu_tree_view" model="ir.ui.view">
            <field name="name">bouygues.purchase.order.line.menu.tree</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order_id" optional="show"/>
                    <field name="partner_id" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="qty_received" optional="show"/>
                    <field name="price_unit" optional="show"/>
                    <field name="product_qty" optional="show"/>
                    <field name="product_uom" optional="show"/>
                    <field name="taxes_id" widget="many2many_tags" optional="show"/>
                    <field name="analytic_imputation_id" optional="show"/>
                    <field name="user_id" optional="show"/>
                    <field name="create_date" optional="show"/>
                    <field name="date_approve" optional="show"/>
                </tree>
            </field>
        </record>

        <record id="bouygues_action_purchase_order_line" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="domain">[('display_type', '=', False)]</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="bouygues.bouygues_purchase_order_line_menu_tree_view"/>
        </record>

        <menuitem action="bouygues_action_purchase_order_line" id="menu_bouygues_action_purchase_order_line" parent="purchase.menu_purchase_config" sequence="40"/>
</odoo>
