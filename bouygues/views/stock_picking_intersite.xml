<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="stock_picking_intersite_tree_view" model="ir.ui.view">
            <field name="name">stock.picking.intersite.tree</field>
            <field name="model">stock.picking.intersite</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="validation_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="stock_picking_intersite_form_view" model="ir.ui.view">
            <field name="name">stock.picking.intersite.form</field>
            <field name="model">stock.picking.intersite</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="validate_intersite" type="object" class="oe_highlight" string="Validate" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_stock_pickings" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('stock_picking_count', '=', 0)]}">
                                <field name="stock_picking_count" widget="statinfo" string="Transfers"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="route_id" attrs="{'readonly': [('state', '=', 'done')]}" options="{'no_create_edit': True}"/>
                                <field name="validation_date"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="warehouse_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                                <field name="location_id" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="product_lines" string="Product Lines">
                                <group>
                                    <field name="product_line_ids" nolabel="1" attrs="{'readonly': [('state', '=', 'done')]}">
                                        <tree editable="bottom">
                                            <field name="product_id"/>
                                            <field name="product_qty"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_stock_picking_intersite" model="ir.actions.act_window">
            <field name="name">Intersite</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking.intersite</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.stock_picking_intersite_tree_view"/>
        </record>

        <menuitem action="action_stock_picking_intersite" id="menu_action_stock_picking_intersite" parent="stock.menu_stock_root" groups="bouygues.bouygues_supplier_sales_group,bouygues.bouygues_manager_sales_group,bouygues.bouygues_supplier_extended_sales_group,base.group_system"/>
</odoo>
