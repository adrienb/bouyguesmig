<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="type_type_search" model="ir.ui.view">
        <field name="name">type.type.search</field>
        <field name="model">type.type</field>
        <field name="arch" type="xml">
            <search string="type.type Search">
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

        <record id="type_type_tree_view" model="ir.ui.view">
            <field name="name">type.type.tree</field>
            <field name="model">type.type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        <record id="type_type_form_view" model="ir.ui.view">
            <field name="name">type.type.form</field>
            <field name="model">type.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <field name="name"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_type_type" model="ir.actions.act_window">
            <field name="name">Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">type.type</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="bouygues.type_type_tree_view"/>
        </record>
        <menuitem action="action_type_type" id="menu_action_type_type" parent="sale.menu_sale_config" sequence="20"/>
</odoo>
