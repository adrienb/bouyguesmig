<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_stock_picking_type_form_view" model="ir.ui.view">
            <field name="name">bouygues.stock.picking.type.from</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='warehouse_id']" position="after">
                    <field name="is_pick"/>
                    <field name="is_out"/>
                    <field name="is_resupply"/>
                    <field name="resupply_contact_id" attrs="{'invisible': [('is_resupply', '=', False)]}"/>
                    <field name="warning_user_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
