<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="bouygues_sale_order_multiple_product_view_form" model="ir.ui.view">
        <field name="name">sale.order.multiple.product.form</field>
        <field name="model">sale.order.multiple.product</field>
        <field name="arch" type="xml">
            <form string="Select Multiple product">
                <group>
                    <field name="product_ids" nolabel="1">
                        <tree>
                            <field name="name"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button class="btn-primary" name="add_product" type="object" string="Apply"/>
                    Or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>