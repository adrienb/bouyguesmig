<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- wizard view -->
        <record id="bouygues_sales_count_extraction_view_form" model="ir.ui.view">
            <field name="name">Sales Count Extraction</field>
            <field name="model">sales.count.extraction</field>
            <field name="arch" type="xml">
                <form string="Sales Count Extraction">
                    <group>
                        <field name="minimum_amount"/>
                        <field name="maximum_amount"/>
                    </group>
                    <footer>
                        <button string="Apply" name="action_apply" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
