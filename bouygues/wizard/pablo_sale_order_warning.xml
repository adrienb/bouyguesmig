<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <act_window id="pablo_sale_order_warning_action"
            name="Pablo Sale Order Warning"
            binding_model="pablo.sale.order"
            res_model="pablo.sale.order.warning"
            view_mode="form"
            target="new"/>

        <!-- wizard view -->
        <record id="pablo_sale_order_warning_action_view_form" model="ir.ui.view">
            <field name="name">Pablo Sale Order Warning</field>
            <field name="model">pablo.sale.order.warning</field>
            <field name="arch" type="xml">
                <form string="Warning">
                    <group>
                        <field name="warning_msg"/>
                    </group>
                    <footer>
                        <button string="Ok" class="btn-primary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
