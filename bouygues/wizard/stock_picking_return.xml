<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_stock_picking_return_form_view" model="ir.ui.view">
            <field name="name">bouygues.stock.picking.return.from</field>
            <field name="model">stock.return.picking</field>
            <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="replace">
                    <field name="picking_type_id" required="1" domain="[('code','=','incoming'), ('name','not ilike','intersite')]"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
