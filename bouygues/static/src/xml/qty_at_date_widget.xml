<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="sale_stock.qtyAtDate">
        <t t-jquery="div:first" t-operation="replace">
            <div t-att-class="!widget.data.display_qty_widget ? 'd-none' : ''">
                <t t-if="(widget.data.free_qty_today &lt; widget.data.qty_to_deliver) and !widget.data.is_mto">
                    <t t-if="widget.data.virtual_available_at_date &lt; widget.data.qty_to_deliver">
                        <a tabindex="0" class="fa fa-info-circle text-danger"/>
                    </t>
                    <t t-else="">
                        <a tabindex="0" class="fa fa-info-circle text-warning"/>
                    </t>
                </t>
                <t t-else="">
                    <a tabindex="0" class="fa fa-info-circle text-primary"/>
                </t>
            </div>
        </t>
    </t>
</templates>
