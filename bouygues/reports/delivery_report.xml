<?xml version="1.0"?>
<odoo>
    <data>

       <record model="ir.actions.server" id="action_print_delivery_report_bouygues">
            <field name="name">Delivery Report Distrimo</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="binding_model_id" ref="stock.model_stock_picking" />
            <field name="binding_type">report</field>
            <field name="state">code</field>
            <field name="code">action = records.action_print_delivery_report()</field>
       </record>

        <record id="action_delivery_report_bouygues" model="ir.actions.report">
            <field name="name">Delivery Report Distrimo</field>
            <field name="print_report_name">"Avis d'expédition - %s - %s" % (object.partner_id.name, object.name)</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">stock.picking</field>
            <field name="report_name">bouygues.bouygues_delivery_report</field>
            <field name="report_file">bouygues.bouygues_delivery_report</field>
            <field name="paperformat_id" ref="bouygues.paperformat_A4_delivery"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
        </record>

        <template id="bouygues_delivery_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="bouygues.bouygues_delivery_report_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>

        <template id="bouygues_external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-esc="company.update_scss()"/>
            <t t-call="bouygues.bouygues_delivery_external_layout"><t t-raw="0"/></t>
        </template>

        <template id="bouygues_delivery_external_layout">
            <div class="header">
                <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div class="col-6 text-right mb4">
                        <h4 class="mt0" t-field="company.report_header"/>
                    </div>
                </div>
                </div>
            </div>

            <div class="article o_report_layout_boxed" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <div style="text-align: left; margin: 0; padding: 0;">
                        <div class="row">
                            <div class="col-5 offset-7">
                                <div style="width: 100%; height: 100px; border: 1px black solid;margin: 5px auto">
                                    <span style="font-size:12px;">Visa du client:</span>
                                    <br/>
                                    <span style="font-size:12px;">Date et signature:</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr style="border: 1px solid black;"/>
                <div class="text-left" style="font-size:12px;">
                    <div t-field="company.company_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="bouygues_delivery_report_document">
            <t t-call="web.html_container">
                <t t-call="bouygues.bouygues_external_layout">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                    <t t-if="partner" name="partner_header">
                        <t t-set="address">
<!--                            <div t-esc="partner" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>-->
                       </t>
                    </t>
                    <h3>
                        <strong>Avis d'expédition</strong>
                    </h3>
                    <div class="row">
                        <div class="col-5">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Site d'expédition: </strong></p>
                                <t t-if="o.partner_id">
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.display_name"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.street"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.street2"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.zip"/><span>  </span><span t-esc="o.picking_type_id.warehouse_id.partner_id.city"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.country_id.name"/></p>
                                </t>
                        </div>
                        <div class="col-5 offset-2">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Adresse de livraison: </strong></p>
                                <t t-if="o.is_dropship">
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.sale_id.partner_id.display_name"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.sale_id.partner_id.street"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.sale_id.partner_id.street2"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.sale_id.partner_id.zip"/><span>  </span><span t-esc="o.sale_id.partner_id.city"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.sale_id.partner_id.country_id.name"/></p>
                                </t>
                                <t t-elif="o.partner_shipping_id">
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_shipping_id.display_name"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_shipping_id.street"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_shipping_id.street2"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_shipping_id.zip"/><span>  </span><span t-esc="o.partner_shipping_id.city"/></p>
                                    <p  style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_shipping_id.country_id.name"/></p>
                                </t>
                                <t t-elif="o.partner_id">
                                    <p style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_id.display_name"/></p>
                                    <p style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_id.street"/></p>
                                    <p style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_id.street2"/></p>
                                    <p style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_id.city"/><span>  </span><span t-esc="o.partner_id.zip"/></p>
                                    <p style="font-size:12px;" class="my-0 py-0"><span t-esc="o.partner_id.country_id.name"/></p>
                                </t>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <br/>
                                <p style="font-size:12px;" class="my-0 py-0"><strong>Commande client : </strong><span t-esc="o.sale_id.client_order_ref"/></p>
                                <p style="font-size:12px;" class="my-0 py-0"><strong>Imputation analytique : </strong><span t-esc="o.sale_id.analytic_imputation"/></p>
                            <br/>
                                <t t-if="o.picking_contact_id">
                                    <p style="font-size:12px;" class="my-0 py-0"><strong>Contact : </strong><span t-esc="o.picking_contact_id.name"/></p>
                                </t>
                                <t t-if="o.contact_mobile">
                                    <p style="font-size:12px;" class="my-0 py-0"><strong>Portable : </strong><span t-esc="o.contact_mobile"/></p>
                                </t>
                                <t t-if="o.contact_phone">
                                    <p style="font-size:12px;" class="my-0 py-0"><strong>Fixe : </strong><span t-esc="o.contact_phone"/></p>
                                </t>
                            <br/>
                        </div>
                        <div class="col-5 offset-2">
                            <br/>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="4" style="text-align:center;min-height:1px;" height="5" class="py-0 my-0">
                                            <strong class="py-0 my-0" style="font-size:12px;">Type de colissage</strong>
                                        </th>
                                    </tr>
                                    <tr class="py-0 my-0" height="5" style="min-height:1px;">
                                        <th class="py-0 my-0">
                                            <strong class="py-0 my-0" style="font-size:12px;">Type</strong>
                                        </th>
                                        <th class="py-0 my-0">
                                            <strong class="py-0 my-0" style="font-size:12px;">Qté</strong>
                                        </th>
                                        <th class="py-0 my-0">
                                            <strong class="py-0 my-0" style="font-size:12px;">Poids</strong>
                                        </th>
                                        <th class="py-0 my-0">
                                            <strong class="py-0 my-0" style="font-size:12px;">Location</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.package_type_ids" t-as="package">
                                        <tr>
                                            <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                                <span t-field="package.package_type_id.name"/>
                                            </td>
                                            <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                                <span t-field="package.number"/>
                                            </td>
                                            <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                                <span t-field="package.weight"/>
                                            </td>
                                            <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                                <span t-field="package.location"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                            <table class="table table-bordered">
                                <tr>
                                    <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                        <strong style="font-size:12px;">Transporteur :</strong>
                                    </td>
                                    <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                        <span t-field="o.transporter_id"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-size:12px;background-color:transparent;border-color:black;color:black;" class="my-0 py-0">
                                        <strong style="font-size:12px;">Date de validation :</strong>
                                    </td>
                                    <td style="font-size:12px;background-color:white;border-color:black;color:black;" class="my-0 py-0">
                                        <span t-field="o.date_done" t-options='{"format": "dd/MM/yyyy"}'/>
                                    </td>
                                </tr>
                            </table>
                            <t t-if="o.dropship_note">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Note : </strong><span t-esc="o.dropship_note"/></p>
                            </t>
                        </div>
                    </div>
                    <div class="page">
                        <h3>
                            <span t-field="o.name"/>
                        </h3>
                        <div class="row">
                            <div class="col-4">
                                    <t t-if="o.origin">
                                        <p style="font-size:12px;" class="my-0 py-0"><strong>Commande Odoo : </strong><span t-esc="o.origin"/></p>
                                    </t>
                                    <t t-if="o.scheduled_date">
                                        <p style="font-size:12px;" class="my-0 py-0"><strong>Date de livraison souhaitée : </strong><span t-field="o.scheduled_date"  t-options='{"format": "dd/MM/yyyy"}'/></p>
                                    </t>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                    <t t-if="o.warehouse_text_printed">
                                        <br/>
                                        <div style="width: 100%; height: auto; border: 2px black solid;margin: 0px; text-align: center">
                                            <t t-if="o.ditrl_warehouse">
                                                <p style="font-size:18px;" class="my-0 py-0"><span t-field="o.ditrl_text"/></p>
                                            </t>
                                            <t t-if="o.dichm_warehouse">
                                                <p style="font-size:18px;" class="my-0 py-0"><span t-field="o.dichm_text"/></p>
                                            </t>
                                            <t t-if="o.paqtl_warehouse">
                                                <p style="font-size:18px;" class="my-0 py-0"><span t-field="o.paqtl_text"/></p>
                                            </t>
                                           <t t-if="o.locd_warehouse">
                                                <p style="font-size:18px;" class="my-0 py-0"><span t-field="o.locd_text"/></p>
                                            </t>
                                        </div>
                                    </t>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        <strong style="font-size:12px;">Ref. Interne</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Designation</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Qté commandée</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Qté livrée</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">N° Série</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Prix U/Brut</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Taxes</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Remise %</strong>
                                    </th>
                                    <th >
                                        <strong style="font-size:12px;">Prix U/Net</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Total HT</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_line_ids_without_package.filtered(lambda line: not line.move_id.bom_line_id and not line.move_id.bom_line_id.bom_id.type == 'phantom')" t-as="move">
                                    <tr>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.product_id.default_code"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.product_id.variant_display_name"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.move_id.product_uom_qty"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.qty_done"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.lot_id"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.move_id.sale_line_id.price_unit" t-options="{'widget': 'monetary', 'from_currency': o.sale_id.pricelist_id.currency_id, 'display_currency': o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-esc="', '.join(map(lambda x: x.name, move.move_id.sale_line_id.tax_id))"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.move_id.sale_line_id.discount"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="move.move_id.sale_line_id.price_reduce" t-options="{'widget': 'monetary', 'from_currency': o.sale_id.pricelist_id.currency_id, 'display_currency': o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-esc="(move.move_id.sale_line_id.price_reduce)*move.qty_done" t-options="{'widget': 'monetary', 'from_currency': o.sale_id.pricelist_id.currency_id, 'display_currency': o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-foreach="o.kit_move_line_ids" t-as="kit_move">
                                    <tr>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.product_id.default_code"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.product_id.variant_display_name"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.product_uom_qty"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.qty_delivered"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span> </span>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.price_unit" t-options="{'widget': 'monetary', 'from_currency': o.sale_id.pricelist_id.currency_id, 'display_currency': o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-esc="', '.join(map(lambda x: x.name, kit_move.move_id.sale_line_id.tax_id))"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.discount"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-field="kit_move.move_id.sale_line_id.price_reduce" t-options="{'widget': 'monetary', 'from_currency': o.sale_id.pricelist_id.currency_id, 'display_currency': o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                        <td style="font-size:12px;" class="my-0 py-0">
                                            <span t-esc="(kit_move.move_id.sale_line_id.price_reduce)*kit_move.move_id.sale_line_id.product_uom_qty" t-options="{'widget': 'monetary', 'from_currency': o.sale_id.pricelist_id.currency_id, 'display_currency': o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <table class="table table-sm" style="width:15%;margin-left:auto;margin-right:0px;">
                            <tr>
                                <td style="font-size:14px;" name="td_amount_untaxed_label"><strong>Total HT</strong></td>
                                <td style="font-size:12px;" name="td_amount_untaxed" class="text-right">
                                    <span t-field="o.amount_untaxed"/>
                                </td>
                            </tr>
                            <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                <tr style="font-size:12px;">
                                    <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                        <td name="td_amount_by_group_label_3">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.sale_id.pricelist_id.currency_id}"/></span>
                                        </td>
                                        <td name="td_amount_by_group_3" class="text-right">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td name="td_amount_by_group_label">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group" class="text-right">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.sale_id.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr>
                                <td style="font-size:14px;" name="td_amount_total_label"><strong>Total TTC</strong></td>
                                <td style="font-size:12px;" name="td_amount_total" class="text-right">
                                    <span t-field="o.amount_total"/>
                                </td>
                            </tr>
                        </table>
                        <table class="table table-sm" style="width:60%;">
                            <thead>
                                <tr>
                                    <th>
                                        <strong style="font-size:12px;">Ref. Interne</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Designation</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Qté commandée</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Qté livrée</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:12px;">Reste à livrer</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.sale_order_line_ids" t-as="line">
                                    <t t-if="line.qty_to_deliver != 0">
                                        <tr>
                                            <td style="font-size:12px;" class="my-0 py-0">
                                                <span t-field="line.product_id.default_code"/>
                                            </td>
                                            <td style="font-size:12px;" class="my-0 py-0">
                                                <span t-field="line.product_id.variant_display_name"/>
                                            </td>
                                            <td style="font-size:12px;" class="my-0 py-0">
