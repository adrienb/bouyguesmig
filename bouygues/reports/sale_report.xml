<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bouygues_sale_report_dashboard_view" model="ir.ui.view">
            <field name="name">bouygues.sale.report.dashboard</field>
            <field name="model">sale.report</field>
            <field name="inherit_id" ref="sale_enterprise.sale_report_view_dashboard"/>
            <field name="arch" type="xml">
                <xpath expr="//aggregate[@name='price_subtotal_confirmed_orders']" position="replace"/>
                <xpath expr="//aggregate[@name='price_subtotal_all_orders']" position="replace"/>
                <xpath expr="//aggregate[@name='days_to_confirm']" position="replace"/>
                <xpath expr="//aggregate[@name='customers']" position="replace"/>
                <xpath expr="//aggregate[@name='lines']" position="replace"/>
                <xpath expr="//formula[@name='total']" position="replace"/>
                <xpath expr="//view" position="replace"/>
                <xpath expr="//view" position="replace"/>
                <xpath expr="//group/group[2]" position="replace"/>
                <xpath expr="//aggregate[@name='order_id_confirmed_orders']" position="after">
                    <aggregate name="order_id_done" field="orders_id" domain="[('state', '=', 'sale')]" string="Confirmed Orders"/>
                </xpath>
            </field>
        </record>

