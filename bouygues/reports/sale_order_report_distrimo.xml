<?xml version="1.0"?>
<odoo>
    <data>

        <record model="ir.actions.server" id="action_print_sale_order_report_distrimo_bouygues">
            <field name="name">Sale Order Report Distrimo</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
            <field name="binding_type">report</field>
            <field name="state">code</field>
            <field name="code">action = records.action_print_sale_order_report_distrimo()</field>
       </record>

        <record id="action_sale_order_report_distrimo_bouygues" model="ir.actions.report">
            <field name="name">Sale Order Report Distrimo</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">sale.order</field>
            <field name="report_name">bouygues.bouygues_sale_order_distrimo_report</field>
            <field name="report_file">bouygues.bouygues_sale_order_distrimo_report</field>
            <field name="paperformat_id" ref="bouygues.paperformat_A4_purchase_order"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
        </record>

        <template id="bouygues_sale_order_distrimo_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="bouygues.bouygues_sale_order_distrimo_report_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>

        <template id="bouygues_external_layout_sale_order_distrimo">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-esc="company.update_scss()"/>
            <t t-call="bouygues.bouygues_sale_order_distrimo_external_layout"><t t-raw="0"/></t>
        </template>

        <template id="bouygues_sale_order_distrimo_external_layout">
            <div class="header">
                <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div class="col-6 text-right mb4">
                        <h4 class="mt0" t-field="company.report_header"/>
                    </div>
                </div>
                </div>
            </div>

            <div class="article o_report_layout_boxed" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <hr style="border: 1px solid black;"/>
                <div class="text-left" style="font-size:14px;">
                    <div t-field="company.company_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="bouygues_sale_order_distrimo_report_document">
            <t t-call="web.html_container">
                <t t-call="bouygues.bouygues_external_layout_sale_order_distrimo">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="partner" t-value="o.partner_id or False"/>
                    <t t-if="partner" name="partner_header">
                        <t t-set="address">
<!--                            <div t-esc="partner" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>-->
                       </t>
                    </t>
                    <div class="row">
                        <div class="col-5 offset-7">
                            <br/>
                            <strong>Client : </strong>
                            <t t-if="o.partner_id">
                                <p class="my-0 py-0"><span t-esc="o.partner_id.name"/></p>
                            </t>
                        </div>
                    </div>
                    <div class="page">
                        <h3>
                        <br/>
                            <strong>Bon de Commande : </strong><span t-field="o.name"/>
                            <br/>
                        </h3>
                        <div class="row">
                            <div class="col-12">
                                <t t-if="o.client_order_ref">
                                    <p class="my-0 py-0"><strong>Votre référence : </strong><span t-esc="o.client_order_ref"/></p>
                                </t>
                                <br/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <strong>Vendeur : </strong>
                                <t t-if="o.user_id">
                                    <p class="my-0 py-0"><span t-esc="o.user_id.name"/></p>
                                </t>
                            </div>
                            <div class="col-4">
                                <strong>Date du devis : </strong>
                                <t t-if="o.date_order">
                                    <p class="my-0 py-0"><span t-esc="o.date_order" t-options="{'widget': 'date'}"/></p>
                                </t>
                            </div>
                            <br/>
                            <br/>
                            <br/>
                        </div>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th><strong>Designation</strong></th>
                                    <th><strong>Taxes</strong></th>
                                    <th><strong>Qté demandée</strong></th>
                                    <th><strong>Prix Unitaire</strong></th>
                                    <th><strong>Montant</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-foreach="o.order_line" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type">
                                            <td class="border border-dark">
                                                <span t-field="line.name"/>
                                            </td>
                                            <td class="border border-dark">
                                                <span t-esc="', '.join(map(lambda x: x.name, line.tax_id))"/>
                                            </td>
                                            <td class="border border-dark">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                            </td>
                                            <td class="border border-dark">
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td class="border border-dark">
                                                <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" id="section">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99" id="note">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99" id="subtotal">
                                                <strong class="mr16">Subtotal</strong>
                                                <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <div id="total" class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tr class="border-black">
                                        <td name="td_subtotal_label"><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="font-size:12px;">
                                            <t t-if="amount_by_group[3] == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td name="td_amount_by_group_label_3">
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></span>
                                                </td>
                                                <td name="td_amount_by_group_3" class="text-right">
                                                    <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td name="td_amount_by_group_label">
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td name="td_amount_by_group" class="text-right">
                                                    <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td name="td_amount_total_label"><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-12">
                            <br/>
                            <br/>
                            <p style="font-size:14px;" class="my-0 py-0"><strong>Le fournisseur déclare avoir pris connaissance et accepte les conditions générales d'achats accessibles en ligne et téléchargeables sous le lien suivant : </strong></p>
                            <p style="font-size:14px;" class="my-0 py-0"><a href="https://fournisseurs.bouygues-construction.com/fr">https://fournisseurs.bouygues-construction.com/fr</a></p>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
