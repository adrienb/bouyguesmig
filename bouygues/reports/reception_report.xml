<?xml version="1.0"?>
<odoo>
    <data>

       <record model="ir.actions.server" id="action_print_reception_report_bouygues">
            <field name="name">Reception Report Distrimo</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="binding_model_id" ref="stock.model_stock_picking" />
            <field name="binding_type">report</field>
            <field name="state">code</field>
            <field name="code">action = records.action_print_reception_report()</field>
       </record>

        <record id="action_reception_report_bouygues" model="ir.actions.report">
            <field name="name">Reception Report Distrimo</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">stock.picking</field>
            <field name="report_name">bouygues.bouygues_reception_report</field>
            <field name="report_file">bouygues.bouygues_reception_report</field>
            <field name="paperformat_id" ref="bouygues.paperformat_A4_reception"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
        </record>

        <template id="bouygues_reception_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="bouygues.bouygues_reception_report_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>

        <template id="bouygues_external_layout_reception">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-esc="company.update_scss()"/>
            <t t-call="bouygues.bouygues_reception_external_layout"><t t-raw="0"/></t>
        </template>

        <template id="bouygues_reception_external_layout">
            <div class="header">
                <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div class="col-6 text-right mb4">
                        <h4 class="mt0" t-field="company.report_header"/>
                    </div>
                </div>
                </div>
            </div>

            <div class="article o_report_layout_boxed" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <hr style="border: 1px solid black;"/>
                <div class="text-left" style="font-size:14px;">
                    <div t-field="company.company_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="bouygues_reception_report_document">
            <t t-call="web.html_container">
                <t t-call="bouygues.bouygues_external_layout_reception">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                    <t t-if="partner" name="partner_header">
                        <t t-set="address">
<!--                            <div t-esc="partner" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>-->
                       </t>
                    </t>
                    <h3>
                        <strong>Bon de réception</strong>
                    </h3>
                    <div class="row">
                        <div class="col-5">
                                <p style="font-size:16;" class="my-0 py-0"><strong>Adresse de l'entrepôt: </strong></p>
                                <t t-if="o.partner_id">
                                    <p  style="font-size:14px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.name"/></p>
                                    <p  style="font-size:14px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.street"/></p>
                                    <p  style="font-size:14px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.street2"/></p>
                                    <p  style="font-size:14px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.zip"/><span>  </span><span t-esc="o.picking_type_id.warehouse_id.partner_id.city"/></p>
                                    <p  style="font-size:14px;" class="my-0 py-0"><span t-esc="o.picking_type_id.warehouse_id.partner_id.country_id.name"/></p>
                                </t>
                        </div>
                        <div class="col-5 offset-2">
                                <p style="font-size:16;" class="my-0 py-0"><strong>Adresse du fournisseur: </strong></p>
                                <t t-if="o.partner_id">
                                    <p style="font-size:14px;" class="my-0 py-0"><span t-esc="o.partner_id.name"/></p>
                                    <p style="font-size:14px;" class="my-0 py-0"><span t-esc="o.partner_id.street"/></p>
                                    <p style="font-size:14px;" class="my-0 py-0"><span t-esc="o.partner_id.street2"/></p>
                                    <p style="font-size:14px;" class="my-0 py-0"><span t-esc="o.partner_id.city"/><span>  </span><span t-esc="o.partner_id.zip"/></p>
                                    <p style="font-size:14px;" class="my-0 py-0"><span t-esc="o.partner_id.country_id.name"/></p>
                                </t>
                        </div>
                    </div>
                    <div class="page">
                        <br/>
                        <h3>
                            <span t-field="o.name"/>
                        </h3>
                        <div class="row">
                            <div class="col-4">
                                    <t t-if="o.origin">
                                        <p style="font-size:14px;" class="my-0 py-0"><strong>N° de commande : </strong><span t-esc="o.origin"/></p>
                                    </t>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        <strong style="font-size:14px;">Ref. Interne</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Ref. Fournisseur</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Designation</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Qté commandée</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Qté réceptionnée</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Emplacement de stockage</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_ids_without_package.sorted(key=lambda x: x.product_id.default_code, reverse=False)" t-as="move">
                                    <tr>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.default_code"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.purchase_line_id.supplier_ref"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.variant_display_name"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_uom_qty"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.quantity_done"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.final_location_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <table class="table table-sm" style="width:45%;">
                            <tr>
                                <td style="font-size:14px;width:40%;" class="my-0 py-0">
                                    <strong style="font-size:14px;">Réceptionneur :</strong>
                                </td>
                                <td style="font-size:14px;" class="my-0 py-0">
                                    <span></span>
                                </td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;width:40%;" class="my-0 py-0">
                                    <strong style="font-size:14px;">Date de réception :</strong>
                                </td>
                                <td style="font-size:14px;" class="my-0 py-0">
                                    <span t-field="o.real_delivery_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
