<?xml version="1.0"?>
<odoo>
    <data>

        <record id="action_package_list_report_bouygues" model="ir.actions.report">
            <field name="name">Package List Report Distrimo</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">stock.picking</field>
            <field name="report_name">bouygues.bouygues_package_list_report</field>
            <field name="report_file">bouygues.bouygues_package_list_report</field>
            <field name="paperformat_id" ref="bouygues.paperformat_A4_reception"/>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
        </record>

        <template id="bouygues_package_list_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="bouygues.bouygues_package_list_report_document" t-lang="o.partner_id.lang"/>
            </t>
        </template>

        <template id="bouygues_external_layout_package_list">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-esc="company.update_scss()"/>
            <t t-call="bouygues.bouygues_package_list_external_layout"><t t-raw="0"/></t>
        </template>

        <template id="bouygues_package_list_external_layout">
            <div class="header">
                <div class="o_boxed_header">
                    <div class="row mb8">
                        <div class="col-6">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                        </div>
                        <div class="col-6 text-right mb4">
                            <h4 class="mt0" t-field="company.report_header"/>
                        </div>
                    </div>
                </div>
            </div>

            <div class="article o_report_layout_boxed" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <hr style="border: 1px solid black;"/>
                <div class="text-left" style="font-size:14px;">
                    <div t-field="company.company_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="bouygues_package_list_report_document">
            <t t-call="web.html_container">
                <t t-call="bouygues.bouygues_external_layout_package_list">
                    <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                    <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                    <t t-if="partner" name="partner_header">
                        <t t-set="address">
<!--                            <div t-esc="partner" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>-->
                       </t>
                    </t>
                    <br/>
                    <h3>
                        <strong>Liste de collisage</strong>
                    </h3>
                    <div class="row">
                        <div class="col-5">
                            <t t-if="o.partner_id">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Destination: </strong><span t-esc="o.partner_id.display_name"/></p>
                            </t>
                            <t t-if="o.partner_id">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Pays : </strong><span t-esc="o.partner_id.country_id.name"/></p>
                            </t>
                            <t t-if="o.sale_id">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Chantier : </strong><span t-esc="o.sale_id.analytic_imputation"/></p>
                            </t>
                            <t t-if="o.sale_id">
                                <p style="font-size:14px;" class="my-0 py-0"><strong>Commande N° : </strong><span t-esc="o.sale_id.client_order_ref"/></p>
                            </t>
                        </div>
                        <div class="col-5 offset-2">
                            <p style="font-size:14px;" class="my-0 py-0"><strong>Dim (cm) : Lxlxh: </strong></p>
                            <p style="font-size:14px;" class="my-0 py-0"><strong>Poids (kg) : </strong><span t-esc="sum(o.package_type_ids.mapped('weight'))"/></p>
                            <p style="font-size:14px;" class="my-0 py-0"><strong>Colis n° : </strong></p>
                        </div>
                    </div>
                    <div class="page">
                        <br/>
                        <br/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        <strong style="font-size:14px;">Ref. Distrimo</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Designation</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Marque</strong>
                                    </th>
<!--                                    <th>-->
<!--                                        <strong style="font-size:14px;">Ref. Fournisseur</strong>-->
<!--                                    </th>-->
                                    <th>
                                        <strong style="font-size:14px;">Nature du matériau</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Origine</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Code douanier</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">N° Colis</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Poids unitaire</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Quantité</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Poids total</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.move_line_ids_without_package" t-as="move">
                                    <tr>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.default_code"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.variant_display_name"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
<!--                                            <span t-field="move.lot_id"/>-->
                                        </td>
<!--                                        <td style="font-size:14px;" class="my-0 py-0">-->
<!--                                            <span t-field="move.supplier_ref"/>-->
<!--                                        </td>-->
                                        <td style="font-size:14px;" class="my-0 py-0">
<!--                                            <span t-field="move.lot_id"/>-->
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.product_tmpl_id.native_country_id.name"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.product_tmpl_id.customs_code"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
<!--                                            <span t-field="move.lot_id"/>-->
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.weight"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.qty_done"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-esc="move.qty_done*move.product_id.weight"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td style="text-align:right;" colspan="9"><strong>Total:</strong></td>
                                    <td style="text-align:center;"><span t-field="o.total_weight"/></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
