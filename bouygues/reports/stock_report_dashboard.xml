<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="stock_report_dashboard_search_view" model="ir.ui.view">
            <field name="name">stock.report.dashboard.view.search</field>
            <field name="model">stock.report.dashboard</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Done Transfers" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Done Deliveries" name="done_deliveries" domain="[('state', '=', 'done'), ('picking_type_code', '=', 'outgoing')]"/>
                    <filter string="Done Receipts" name="done_receipts" domain="[('state', '=', 'done'), ('picking_type_code', '=', 'incoming')]"/>
                </search>
            </field>
        </record>

        <record id="stock_report_dashboard_pivot_view" model="ir.ui.view">
            <field name="name">stock.report.dashboard.view.pivot</field>
            <field name="model">stock.report.dashboard</field>
            <field name="arch" type="xml">
                <pivot string="Stock Overview">
                    <field name="operation_type" type="col"/>
                    <field name="cycle_time" type="measure"/>
                    <field name="delay" type="measure"/>
<!--                    <field name="number_of_out_pickings" type="measure"/>-->
                    <field name="number_of_backorder" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="stock_report_dashboard_dashboard_view" model="ir.ui.view">
            <field name="name">stock.report.dashboard.dashboard.view</field>
            <field name="model">stock.report.dashboard</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <dashboard>
                    <group col="1">
                        <group col="4">
                            <aggregate name="delivery_time_avg" string="Deliveries Cycle Time" field="cycle_time" group_operator="avg"
                                domain="[('picking_type_code', '=', 'outgoing')]" domain_label="Done Deliveries"
                                help="Time needed to deliver an order (in days). Computed by comparing the creation date of the delivery order and its done date."
                                value_label="days"/>
                            <aggregate name="receipt_time_avg" string="Receipts Cycle Time" field="cycle_time" group_operator="avg"
                                domain="[('picking_type_code', '=', 'incoming')]" domain_label="Done Receipts"
                                help="Time needed to receive an order (in days). Computed by comparing the creation date of the receipt and its done date."
                                value_label="days"/>
                            <aggregate name="delivery_create_date" string="Deliveries Delay" field="delay" group_operator="avg"
                                domain="[('picking_type_code', '=', 'outgoing')]" domain_label="Done Deliveries"
                                help="Delay to deliver an order (in days). Computed by comparing the scheduled date of the delivery order and its effective date."
                                value_label="days"/>
                            <aggregate name="receipt_create_date" string="Receipts Delay" field="delay" group_operator="avg"
                                domain="[('picking_type_code', '=', 'incoming')]" domain_label="Done Receipts"
                                help="Delay to receive an order (in days). Computed by comparing the scheduled date of the receipt and its effective date."
                                value_label="days"/>
                        </group>
                    </group>
                    <view type="pivot" ref="stock_report_dashboard_pivot_view"/>
                </dashboard>
            </field>
        </record>

        <record id="stock_report_dashboard_dashboard_action" model="ir.actions.act_window">
            <field name="name">Stock Picking Analysis</field>
            <field name="res_model">stock.report.dashboard</field>
            <field name="view_mode">dashboard</field>
            <field name="view_id" ref="stock_report_dashboard_dashboard_view"/>
            <field name="search_view_id" ref="stock_report_dashboard_search_view"/>
            <field name="domain" eval="[('picking_type_code', '!=', False)]"/>
            <field name="context">{'search_default_done': 1, 'time_ranges': {'field':'date_done', 'range':'last_30_days'}}</field> <!-- Use context keys for cohort view -->
        </record>

        <menuitem
            id="stock_report_dashboard_dashboard_menuitem"
            name="Stock Picking Analysis"
            parent="stock.menu_warehouse_report"
            action="stock_report_dashboard_dashboard_action"/>
    </data>
</odoo>
