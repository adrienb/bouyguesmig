<?xml version="1.0"?>
<odoo>
    <data>

        <record id="action_manufacturing_report_bouygues" model="ir.actions.report">
            <field name="name">Manufacturing Report Distrimo</field>
            <field name="report_type">qweb-pdf</field>
            <field name="model">mrp.production</field>
            <field name="report_name">bouygues.bouygues_manufacturing_report</field>
            <field name="report_file">bouygues.bouygues_manufacturing_report</field>
            <field name="paperformat_id" ref="bouygues.paperformat_A4_reception"/>
            <field name="binding_model_id" ref="mrp.model_mrp_production"/>
            <field name="binding_type">report</field>
        </record>

        <template id="bouygues_manufacturing_report">
            <t t-foreach="docs" t-as="o">
                <t t-call="bouygues.bouygues_manufacturing_report_document"/>
            </t>
        </template>

        <template id="bouygues_external_layout_manufacturing">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-esc="company.update_scss()"/>
            <t t-call="bouygues.bouygues_manufacturing_external_layout"><t t-raw="0"/></t>
        </template>

        <template id="bouygues_manufacturing_external_layout">
            <div class="header">
                <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo"/>
                    </div>
                    <div class="col-6 text-right mb4">
                        <h4 class="mt0" t-field="company.report_header"/>
                    </div>
                </div>
                </div>
            </div>

            <div class="article o_report_layout_boxed" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-call="web.address_layout"/>
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <hr style="border: 1px solid black;"/>
                <div class="text-left" style="font-size:14px;">
                    <div t-field="company.company_footer"/>
                    <div t-if="report_type == 'pdf'">
                        Page: <span class="page"/> / <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>

        <template id="bouygues_manufacturing_report_document">
            <t t-call="web.html_container">
                <t t-call="bouygues.bouygues_external_layout_manufacturing">
                    <h3>
                        <strong>Ordre de fabrication</strong>
                    </h3>
                    <div class="page">
                        <br/>
                        <h3>
                            <span t-field="o.name"/>
                        </h3>
                        <div class="row">
                            <div class="col-12">
                                    <t t-if="o.product_id">
                                        <p style="font-size:14px;" class="my-0 py-0"><strong>Produit à fabriquer : </strong><span t-esc="o.product_id.display_name"/></p>
                                    </t>
                                    <t t-if="o.product_qty">
                                        <p style="font-size:14px;" class="my-0 py-0"><strong>Quantité à produire : </strong><span t-field="o.product_qty"/></p>
                                    </t>
                                    <t t-if="o.location_dest_id">
                                        <p style="font-size:14px;" class="my-0 py-0"><strong>Emplacement de stockage : </strong><span t-field="o.final_location_id"/></p>
                                    </t>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>
                                        <strong style="font-size:14px;">Ref. Interne</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Designation</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Qté / Fabrication</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Qté totale nécessaire</strong>
                                    </th>
                                    <th>
                                        <strong style="font-size:14px;">Emplacement de stockage</strong>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="o.components_move_line_ids" t-as="move">
                                    <tr>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.default_code"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.product_id.name"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.move_id.bom_line_id.product_qty"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.qty_done"/>
                                        </td>
                                        <td style="font-size:14px;" class="my-0 py-0">
                                            <span t-field="move.location_id"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <table class="table table-sm" style="width:45%;">
                            <tr>
                                <td style="font-size:14px;" class="my-0 py-0">
                                    <strong style="font-size:14px;">Préparateur :</strong>
                                </td>
                                <td style="font-size:14px;" class="my-0 py-0">
                                    <span t-field="o.user_id"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="font-size:14px;" class="my-0 py-0">
                                    <strong style="font-size:14px;">Date de fabrication :</strong>
                                </td>
                                <td style="font-size:14px;" class="my-0 py-0">
                                    <span t-field="o.date_deadline" t-options='{"format": "dd/MM/yyyy"}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
